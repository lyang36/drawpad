<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="#aaaaaa"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_marginBottom="10dp">
        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:id="@+id/adjustingContainer_brush">
            <View
                android:layout_width="10dp"
                android:layout_height="240dp"
                android:layout_marginBottom="30dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/adjustingBar_brush"
                android:visibility="gone"
                android:background="@drawable/rec_shape_adjusting_bar"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/huawo_artboard_brush"
                android:id="@+id/adjustingDot_brush"
                android:background="@drawable/rec_shape_trans_grey_clickable"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="300dp"
            android:layout_weight="1">
            <View
                android:layout_width="10dp"
                android:layout_height="240dp"
                android:layout_marginBottom="30dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/adjustingBar_opacity"
                android:visibility="gone"
                android:background="@drawable/rec_shape_adjusting_bar"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/huawo_artboard_transparency"
                android:background="@drawable/rec_shape_trans_grey_clickable"
                android:id="@+id/adjustingDot_opacity"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1">
            <com.yang.drawpad.ColorDotView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/rec_shape_trans_grey_clickable"
                android:layout_alignParentBottom="true"
                android:id="@+id/colorPicker_button"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/huawo_artboard_undo"
                android:id="@+id/imageView_undo"
                android:background="@drawable/rec_shape_trans_grey_clickable"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>